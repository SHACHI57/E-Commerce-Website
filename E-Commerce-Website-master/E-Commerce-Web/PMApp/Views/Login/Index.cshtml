@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        #main {
            height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #form {
            height: 200px;
            width: 300px;
            background-color: black;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 30px;
        }
        a{
            color: white;
            text-decoration: none;
        }
        a:hover{
            color: skyblue;
        }
    </style>
</head>
<body>
    <div id="main">
        <div id="form">
            <form method="post">

                <table>
                    <tr>
                        <td>USERNAME</td>
                        <td><input type="text" name="Username" value="@ViewBag.username" /></td>
                    </tr>
                    <tr>
                        <td>PASSWORD</td>
                        <td><input type="password" name="Password" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Login" /></td>
                    </tr>

                </table>

                <div>
                    Not a member yet ? <a href="@Url.Action("Index", "Registration")">Register Now</a>
                </div>

            </form>
        </div>
         @if (ViewBag.errorMessage != null)
           {
             <span> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp;</span> <font color="red"> @ViewBag.errorMessage </font>
           }

        @if(@TempData["msg"] != null)
        {
            <script type="text/javascript">
                window.alert("@TempData["msg"]");
            </script>
        }

        @if (ViewBag.loginError != null)
           {
             <span> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp;</span> <font color="red"> @ViewBag.loginError </font>
           }
  
    </div>
</body>
</html>
